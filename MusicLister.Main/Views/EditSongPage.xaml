<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Feleves_Feladat_FZW0D1.ViewModels"
             x:DataType="viewmodels:EditSongViewModel"
             x:Class="Feleves_Feladat_FZW0D1.Views.EditSongPage"
             Title="EditSongPage">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20" VerticalOptions="Center">

            <Label Text="Előadó neve" FontAttributes="Bold"/>
            <Entry Text="{Binding SongToEdit.Title}" Placeholder="God Save The Rave"/>

            <Label Text="Dal hossza (másodperc)" FontAttributes="Bold" Margin="0,10,0,0"/>
        
            <Entry Text="{Binding SongLengthInSeconds}" 
                   Keyboard="Numeric"
                   Placeholder="180"/>
        
            <Stepper Value="{Binding SongLengthInSeconds}"
                     Minimum="0"
                     Maximum="3600" Increment="1" /> <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" Margin="0,20,0,0">
                <Button Text="Mentés"  Command="{Binding SaveCommand}"/>
                <Button Text="Vissza" Command="{Binding CancelCommand}"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>