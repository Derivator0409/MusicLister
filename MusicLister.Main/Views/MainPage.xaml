<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Feleves_Feladat_FZW0D1.MainPage"
             Title="MusicLister">
    <Grid RowDefinitions="Auto, *" RowSpacing="10" Padding="10">

        <HorizontalStackLayout Grid.Row="0" Spacing="15" HorizontalOptions="Center">
            <Button Text="New Artist" Command="{Binding }"/>
            <Button Text="Edit Artist"/>
            <Button Text="Delete Artist"/>
        </HorizontalStackLayout>

    </Grid>
</ContentPage>
