<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Feleves_Feladat_FZW0D1.ViewModels"
             x:Class="Feleves_Feladat_FZW0D1.Views.EditArtistPage"
             x:DataType="viewmodels:EditArtistViewModel"
             Title="ArtistPage">
    <VerticalStackLayout Spacing="10" Padding="20" VerticalOptions="Center">
        <Label Text="Előadó neve" FontAttributes="Bold"/>

        <Entry Text="{Binding ArtistToEdit.Name}" Placeholder="Scooter"/>

        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Button Text="Mentés"  Command="{Binding SaveCommand}"/>
            <Button Text="Vissza" Command="{Binding CancelCommand}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>